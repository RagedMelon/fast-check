/* 弹窗 */


/**index.wxss**/

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    height: 356rpx;
    overflow: hidden;
    position: fixed;
    /* top: 50%; */
    top: 496rpx;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 36rpx;
    padding: 48rpx 0;
}

.modal-icon {
    text-align: center;
}

.modal-icon image {
    width: 92rpx;
    height: 96rpx;
}

.modal-content {
    padding: 48rpx 0;
    text-align: center;
}

.tips-success {
    color: rgba(51, 51, 51, 1);
    font-size: 32rpx;
    font-family: Alibaba-PuHuiTi-M;
    margin-bottom: 8rpx;
}

.tips-time {
    color: rgba(128, 128, 128, 1);
    font-size: 28rpx;
    font-family: Alibaba-PuHuiTi-R;
}

.btn-confirm {
    width: 436rpx;
    margin: 0 auto;
    height: 72rpx;
    line-height: 72rpx;
    border-radius: 36rpx;
    background-color: rgba(255, 197, 26, 1);
    box-shadow: 0 20rpx 20rpx 0 rgba(255, 197, 26, 0.2);
    color: rgba(255, 255, 255, 1);
    font-size: 28rpx;
    font-family: Alibaba-PuHuiTi-R;
    text-align: center;
}