<!--pagesCollect/pages/taskManager/taskManager.wxml-->
<view class="task-page">
  <!-- <status-bar change="{{complete}}" bind:stage="switch"/> -->
  <status-bar bind:stage="switch"/>
  <!-- 未完成 -->
  <task-box wx:if="{{option==0}}" taskList="{{taskList}}"/>
  <!-- 未完成-无未完成任务 -->
  <empty wx:if="{{taskList.length==0&&option==0}}" text="{{content}}"/>
  <!-- 已完成 -->
  <view wx:if="{{option==1}}">
    <filter second="{{taskFilter}}" items="{{taskStatus}}" default="{{taskDefault}}" bind:range="changeRange" bind:status="changeStatus" bind:start="customStart" bind:end="customEnd"/>
  
    <task-box taskList="{{taskList}}"/>
  </view>
</view>
