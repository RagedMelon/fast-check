/* components/collect/index/index.wxss */

.task-stage {
    margin: 50rpx 0;
    display: flex;
    justify-content: space-evenly;
    color: rgba(128, 128, 128, 1);
    font-size: 32rpx;
    text-align: center;
    font-family: Alibaba-PuHuiTi-R;
}

.stage-selected {
    color: rgba(51, 51, 51, 1);
    position: relative;
}

.stage-selected::after {
    content: '';
    display: block;
    width: 48rpx;
    height: 4rpx;
    background-color: rgba(255, 197, 26, 1);
    position: absolute;
    bottom: -16rpx;
    left: 24rpx;
}