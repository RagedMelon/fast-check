    font-family: Alibaba-PuHuiTi-R;
} */

.negative {
    color: rgba(127, 127, 127, 1);
    font-size: 28rpx;
    font-family: Alibaba-PuHuiTi-R;
}

.positive {
    color: red;
    font-size: 28rpx;
    font-family: Alibaba-PuHuiTi-R;
}

.more {
    height: 106rpx;
    line-height: 106rpx;
    text-align: center;
    color: rgba(204, 204, 204, 1);
    font-size: 28rpx;
    font-family: Alibaba-PuHuiTi-R;
}

.more .down {
    width: 18rpx;
    height: 12rpx;
    margin-left: 18rpx;
    vertical-align: middle;
    transition: All 0.3s ease-in-out;
}

.more .up {
    width: 18rpx;
    height: 12rpx;
    margin-left: 18rpx;
    vertical-align: middle;
    transform: rotate(180deg);
    transition: All 0.3s ease-in-out;
}