.container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
}

.container {
    height: 120rpx;
    flex-direction: row;
    padding: 22rpx 32rpx;
}

.search-container {
    width: 504rpx;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 28rpx;
    background-color: rgba(255, 255, 255, 1);
    border: 1px solid rgba(241, 241, 241, 1);
    position: relative;
    color: rgba(204, 204, 204, 1);
    font-size: 28rpx;
    text-align: left;
    font-family: Alibaba-PuHuiTi-R;
    padding-left: 32rpx;
}

.search-container .icon-search {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 34rpx;
    top: 14rpx;
}

.search-container .search-input {
    width: 100%;
    height: 100%;
}

.citySwitch {
    width: 120rpx;
    color: rgba(52, 52, 52, 1);
    font-size: 28rpx;
    text-align: right;
    font-family: Alibaba-PuHuiTi-R;
}

.citySwitch .pic {
    width: 16rpx;
    height: 12rpx;
    color: #62D664;
    vertical-align: middle;
}