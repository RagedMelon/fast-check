/* components/collect/index/index.wxss */

.sample-info {
    width: 622rpx;
    padding: 16rpx 32rpx;
    margin: 0 auto 32rpx;
    background-color: #fff;
    border-radius: 24rpx;
}

.sample-info .row {
    height: 72rpx;
    line-height: 72rpx;
    color: #808080;
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    border-bottom: 2rpx solid #FAFAFA
}

.row .tag {
    height: 100%;
    line-height: 72rpx;
}

.row .star-red {
    display: inline-block;
    vertical-align: top;
    color: red;
    font-size: 8rpx;
    margin-right: 8rpx;
}

.icon-code {
    width: 28rpx;
    height: 28rpx;
    vertical-align: middle;
    margin-left: 18rpx;
}

.icon-add {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    margin-left: 18rpx;
}

.fill {
    color: black;
}

.holder {
    color: rgba(204, 204, 204, 1);
}

.drop {
    width: 18rpx;
    height: 12rpx;
    margin-left: 18rpx;
}

.sample-info .certificate {
    height: 100rpx;
    /* line-height: 100rpx; */
}

.certification {
    height: 100%;
    width: 134rpx;
}

.certificate {
    height: 124rpx;
    line-height: 124rpx;
}

.certificate .pic {
    height: 100%;
    width: 160rpx;
}