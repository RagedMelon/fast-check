/* components/collect/index/index.wxss */

.shop {
    background-color: #fff;
    padding: 32rpx;
    border-radius: 24rpx;
    margin-bottom: 16rpx;
}

.row-top {
    height: 72rpx;
    display: flex;
    justify-content: space-between;
}

.shopName {
    color: rgba(51, 51, 51, 1);
    font-weight: bold;
    font-size: 28rpx;
    font-family: Alibaba-PuHuiTi-M;
}

.result {
    color: rgba(255, 77, 77, 1);
    font-size: 24rpx;
    text-align: right;
    font-family: Alibaba-PuHuiTi-R;
}

.shopNum,
.owner,
.phone,
.check-date {
    height: 50rpx;
    color: rgba(128, 128, 128, 1);
    font-size: 24rpx;
    text-align: left;
    font-family: Alibaba-PuHuiTi-R;
}

.row-bottom {
    display: flex;
    justify-content: space-between;
}

.sample {
    width: 112rpx;
    height: 48rpx;
    line-height: 48rpx;
    border-radius: 24rpx;
    background-color: rgba(255, 197, 26, 1);
    box-shadow: 0 20rpx 20rpx 0 rgba(255, 197, 26, 0.2);
    color: rgba(255, 255, 255, 1);
    font-size: 24rpx;
    text-align: center;
    font-family: Alibaba-PuHuiTi-R;
    z-index: 5;
}