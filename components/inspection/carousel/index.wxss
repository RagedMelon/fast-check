/* 轮播图 */

.swiper {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
    overflow: hidden;
    transform: translateY(0);
    box-shadow: 0 30rpx 10rpx rgba(87, 217, 87, 0.15);
    margin-bottom: 40rpx;
}

.swiper-box {
    height: 400rpx;
}

.swiper-item-box {
    width: 100%;
    height: 100%;
    /* background-color: #57D957; */
}

.swiper-item {
    width: 100%;
    height: 100%;
}

.swiper-item .pic {
    width: 100%;
    height: 100%;
    transform: scale(1.25);
}