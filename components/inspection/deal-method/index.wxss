/* components/inspection/index/index.wxss */

.deal-box {
    background-color: #fff;
    width: 622rpx;
    padding: 32rpx;
    margin: 0 auto;
    border-radius: 24rpx;
    color: rgba(128, 128, 128, 1);
    font-size: 28rpx;
    font-family: Alibaba-PuHuiTi-R;
}

.row {
    height: 72rpx;
    line-height: 72rpx;
    border-bottom: 2rpx solid #FAFAFA;
    display: flex;
    justify-content: space-between;
}

.tips {
    line-height: 32rpx;
    /* color: rgba(255, 77, 77, 1); */
    font-size: 24rpx;
    font-family: Alibaba-PuHuiTi-R;
}

.red {
    color: red;
}

.amount {
    /* float: left; */
    display: flex;
    /* justify-content: center; */
}

.input {
    text-align: right;
    height: 100%;
    margin-right: 16rpx;
}

.icon {
    width: 18rpx;
    height: 12rpx;
    vertical-align: middle;
    margin-left: 16rpx;
}

.icon-cam {
    width: 31.38rpx;
    height: 26.88rpx;
    margin-left: 16rpx;
}

.grey {
    color: rgba(204, 204, 204, 1);
}

.black {
    color: black;
}