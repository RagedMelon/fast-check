/* pagesInspection/pages/readIn/readIn.wxss */

page {
    background-color: #f2f3f5;
}

.test-result {
    background-color: #fff;
    border-radius: 24rpx;
    width: 622rpx;
    padding: 0 32rpx;
    margin: 0 auto 16rpx;
    color: rgba(51, 51, 51, 1);
    font-size: 28rpx;
    font-family: Alibaba-PuHuiTi-R;
}

.row {
    display: flex;
    justify-content: space-between;
    height: 72rpx;
    line-height: 72rpx;
    border: 2rpx solid rgba(250, 250, 250, 1);
    position: relative;
}

.description {
    height: 100%;
    /* line-height: 72rpx; */
    line-height: 48rpx;
    padding: 16rpx 0;
}

.photos {
    height: 124rpx;
    line-height: 124rpx;
}

.tag {
    color: rgba(128, 128, 128, 1);
}

.test-value {
    display: flex;
}

.value {
    width: 166rpx;
    height: 100%;
    margin-right: 16rpx;
    text-align: right;
}

.positive {
    color: red
}

.negative {
    color: green
}

.icon {
    width: 18rpx;
    height: 12rpx;
    margin-left: 18rpx;
    vertical-align: middle;
}

.list {
    background-color: #fff;
    border: solid 2rpx #f2f3f5;
    z-index: 5;
    position: absolute;
    top: 72rpx;
    right: 0;
    max-height: 500rpx;
    overflow: scroll;
}

.item {
    text-align: center;
    padding: 16rpx;
}

.icon-cam {
    width: 32rpx;
    height: 27rpx;
    margin-left: 18rpx;
    vertical-align: middle;
    position: absolute;
    right: 0rpx;
    top: 50%;
    transform: translateY(-50%);
}

.pics-box {
    padding-right: 48rpx;
}

.proof {
    width: 134rpx;
    height: 100%;
}

.explain {
    min-height: 56rpx;
    line-height: 28rpx;
    font-size: 28rpx;
    width: 400rpx;
    white-space: pre-wrap;
    word-wrap: break-word;
    word-break: normal;
}

.add {
    text-align: center;
    font-size: 28rpx;
    color: #62D664;
}

.icon-small {
    vertical-align: middle;
    margin-right: 18rpx;
}

.del-sample {
    text-align: center;
    font-size: 28rpx;
    color: red;
    margin-bottom: 32rpx;
}

.icon-add {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    margin-right: 18rpx;
}

.holder {
    color: rgba(204, 204, 204, 1);
}

.btn-row {
    width: 686rpx;
    margin: 32rpx auto;
    display: flex;
    justify-content: space-between;
}


