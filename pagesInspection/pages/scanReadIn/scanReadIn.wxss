.submit {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    background-color: rgba(255, 197, 26, 1);
    box-shadow: 0 20rpx 20rpx 0 rgba(255, 197, 26, 0.2);
    color: white;
    text-align: center;
}


/* 自定义modal */

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}

.modalDlg {
    width: 532rpx;
    height: 444rpx;
    position: fixed;
    top: 320rpx;
    z-index: 9999;
    margin-left: 55rpx;
    background-color: #fff;
    border-radius: 16rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 50rpx;
}

.icon-warn {
    width: 96rpx;
    height: 96rpx;
    margin-bottom: 50rpx
}

.title {
    color: rgba(51, 51, 51, 1);
    font-size: 32rpx;
    text-align: center;
    font-family: Alibaba-PuHuiTi-M;
    font-weight: bold;
    margin-bottom: 8rpx;
}

.red {
    color: red;
}

.question {
    color: rgba(128, 128, 128, 1);
    font-size: 28rpx;
    text-align: center;
    font-family: Alibaba-PuHuiTi-R;
    margin-bottom: 48rpx;
}

.btn {
    width: 100%;
    display: flex;
    justify-content: space-evenly;
}

.no {
    width: 202rpx;
    height: 64rpx;
    line-height: 64rpx;
    border-radius: 40rpx;
    background-color: rgba(255, 255, 255, 1);
    border: 2rpx solid rgba(242, 242, 242, 1);
    color: rgba(255, 197, 26, 1);
    text-align: center;
    /* margin-right: 16rpx; */
}

.yes {
    width: 202rpx;
    height: 64rpx;
    line-height: 64rpx;
    border-radius: 36rpx;
    background-color: rgba(255, 197, 26, 1);
    box-shadow: 0 20rpx 20rpx 0 rgba(255, 197, 26, 0.2);
    color: white;
    text-align: center;
}