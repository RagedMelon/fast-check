<!--pagesCollect/pages/reset/reset.wxml-->
<view class="reset">
    <view class="reset-box">
        <view class="info-box">
            <view class="left">账号名称</view>
            <view class="user">阿里郎</view>
        </view>
        <view class="info-box">
            <view class="left">原密码</view>
            <input password="{{true}}" value="{{originValue}}" class="origin" placeholder="请输入原密码" placeholder-class="input-placeholder" bindfocus="bindOrigin" bindinput="bindOrigin"></input>
        </view>
        <view class="info-box">
            <view class="left">新密码</view>
            <input password="{{true}}" value="{{newValue}}" class="new-password" placeholder="请输入新密码" placeholder-class="input-placeholder" bindfocus="bindNew" bindinput="bindNew"></input>
        </view>
        <view class="info-box">
            <view class="left">确认密码</view>
            <input password="{{true}}" value="{{repeatValue}}" class="user" placeholder="请再次输入原密码" placeholder-class="input-placeholder" bindfocus="bindRepeat" bindinput="bindRepeat"></input>
        </view>
    </view>
</view>
<button class="btn" bindtap="resetPassword">确定</button>
