/* pagesInspection/pages/deal/deal.wxss */

page {
    background-color: #f2f3f5;
}


/* components/inspection/index/index.wxss */

.deal-box {
    background-color: #fff;
    width: 622rpx;
    padding: 32rpx;
    margin: 0 auto;
    border-radius: 24rpx;
    color: rgba(128, 128, 128, 1);
    font-size: 28rpx;
    font-family: Alibaba-PuHuiTi-R;
}

.row {
    height: 72rpx;
    line-height: 72rpx;
    border-bottom: 2rpx solid #FAFAFA;
    display: flex;
    justify-content: space-between;
    position: relative;
}

.pic-row {
    line-height: 72rpx;
    border-bottom: 2rpx solid #FAFAFA;
    display: flex;
    justify-content: space-between;
    position: relative;
}

.pic-box {
    width: 428rpx;
}

.methodList {
    position: absolute;
    right: 0;
    top: 72rpx;
    background-color: #fff;
    z-index: 5;
    border-radius: 24rpx;
    padding: 16rpx;
}

.method {
    text-align: center;
}

.tips {
    line-height: 32rpx;
    /* color: rgba(255, 77, 77, 1); */
    font-size: 24rpx;
    font-family: Alibaba-PuHuiTi-R;
}

.red {
    color: red;
}

.amount {
    /* float: left; */
    display: flex;
    /* justify-content: center; */
}

.input {
    text-align: right;
    height: 100%;
    margin-right: 16rpx;
    color: black;
}

.icon {
    width: 18rpx;
    height: 12rpx;
    vertical-align: middle;
    margin-left: 16rpx;
}

.icon-cam {
    width: 31.38rpx;
    height: 26.88rpx;
    margin-left: 16rpx;
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
}

.grey {
    color: rgba(204, 204, 204, 1);
}

.photo {
    width: 132rpx;
    height: 98rpx;
}

.black {
    color: black;
}

.btn {
    width: 686rpx;
    height: 80rpx;
    margin: 32rpx auto 80rpx;
    display: flex;
    justify-content: space-between;
}


